<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       
    <!-- Bean definitions go here -->
    <!-- here the id attribute is for the getBean() function to know which function to call from this xml file -->
    <!--  this is a setter based dependency injection, , you need to define the setter manually in the respective class (here springlearning.Triangle) -->
    <bean id="triangle" class="springlearning.Triangle">
    	<property name="PointA" ref="origin"></property>
    	<property name="PointB" ref="point1"></property>
    	<property name="PointC" ref="point2"></property>
    </bean>
    
    <bean id="origin" class="springlearning.Point">
    	<property name="x" value="0"></property>
    	<property name="y" value="0"></property>
    </bean>
    
    <bean id="point1" class="springlearning.Point">
    	<property name="x" value="5"></property>
    	<property name="y" value="10"></property>
    </bean>
    
    <bean id="point2" class="springlearning.Point">
    	<property name="x" value="10"></property>
    	<property name="y" value="25"></property>
    </bean>
    
</beans>
